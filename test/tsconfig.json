{
  "compilerOptions": {
    "outDir": "../lib-test",
    "declaration": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "module": "commonjs",
    "target": "es2016",
    "baseUrl": "../",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@test/*": [
        "test/*"
      ]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": []
}
